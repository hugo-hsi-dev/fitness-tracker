generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider         = "zod-prisma-types"
  useMultipleFiles = true
  writeBarrelFiles = false
  output           = "../lib/zod-schemas"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String              @id @default(uuid())
  email        String              @unique
  name         String?
  weights      WeightEntry[]
  exerciseTime ExerciseTimeEntry[]
}

model WeightEntry {
  id        String    @id @default(uuid())
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model ExerciseTimeEntry {
  id        String    @id @default(uuid())
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  startTime DateTime  @default(now())
  endTime   DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}
